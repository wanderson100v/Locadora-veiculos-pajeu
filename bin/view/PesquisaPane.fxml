<AnchorPane fx:id="pesquisaPane" minHeight="550.0" minWidth="660.0" prefHeight="550.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PesquisaController">
   <children>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <AnchorPane>
               <children>
                  <AnchorPane fx:id="tabelaPane" layoutX="15.0" layoutY="154.0" prefHeight="311.0" prefWidth="615.0">
                     <children>
                        <Label layoutX="150.0" layoutY="144.0" text="Selecione um filtro para pesquisa" textFill="WHITE">
                           <font>
                              <Font name="Verdana Italic" size="18.0" />
                           </font>
                           <effect>
                              <DropShadow height="38.79" radius="13.705" spread="0.28" width="18.03" />
                           </effect>
                        </Label>
                     </children>
                  </AnchorPane>
                  <TextField fx:id="pesquisaFld" layoutX="104.0" layoutY="73.0" onAction="#actionHandle" prefHeight="23.0" prefWidth="289.0" promptText="Insira dado para pesquisa">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font></TextField>
                  <ComboBox fx:id="filtroBox" layoutX="407.0" layoutY="73.0" onAction="#actionHandle" prefWidth="150.0" promptText="Filtro" />
                  <Label layoutX="226.0" layoutY="35.0" text="Manipulação dedados">
                     <font>
                        <Font name="Verdana" size="18.0" />
                     </font>
                  </Label>
                  <BorderPane fx:id="detalhesPane" layoutX="620.0" layoutY="12.0" prefHeight="505.0" prefWidth="560.0">
                     <top>
                        <Label text="Detalhes" BorderPane.alignment="CENTER">
                           <font>
                              <Font name="Verdana" size="18.0" />
                           </font>
                        </Label>
                     </top>
                     <center>
                        <ScrollPane fx:id="detalhesScroll" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                     </center>
                     <left>
                        <FlowPane alignment="CENTER" prefHeight="510.0" prefWidth="41.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="detalhesBtn" mnemonicParsing="false" onAction="#actionHandle" text="-&gt;" />
                           </children>
                        </FlowPane>
                     </left>
                     <bottom>
                        <ButtonBar fx:id="acoesBar" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                     </bottom>
                  </BorderPane>
               </children>
            </AnchorPane>
         </children>
      </GridPane>
   </children>
</AnchorPane>
